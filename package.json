{
    "name": "examples-components",
    "version": "0.0.1",
    "author": "Yuval Vardi",
    "bugs": "https://github.com/vyuvalv/examples/issues",
    "dependencies": {
        "@lwc/synthetic-shadow": "^1.17.6",
        "@salesforce-ux/design-system": "^2.14.3",
        "lightning-base-components": "^1.11.5-alpha",
        "compression": "^1.7.4",
        "helmet": "^3.23.3",
        "express": "^4.17.1"
    },
    "devDependencies": {
        "lwc-services": "^2.3.2",
        "npm-run-all": "^4.1.5"
    },
    "engines": {
        "node": ">=10.13.0",
        "npm": ">=6.4.1",
        "yarn": ">=1.9.4"
    },
    "homepage": "https://github.com/vyuvalv/examples",
    "keywords": [
        "lwc"
    ],
    "license": "MIT",
    "nodemonConfig": {
        "watch": [
            "src/server/**/*.js"
        ],
        "ext": "js",
        "ignore": [
            "src/**/*.spec.js",
            "src/**/*.test.js"
        ],
        "exec": "node ./src/server/server.js"
    },
    "repository": "vyuvalv/examples",
    "scripts": {
        "build": "lwc-services build -m production",
        "build:development": "lwc-services build",
        "watch": "run-p watch:client watch:server",
        "watch:client": "lwc-services watch",
        "watch:server": "nodemon"
    }
}
